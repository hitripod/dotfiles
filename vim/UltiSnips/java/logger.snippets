snippet slf4j "logger field"
import org.slf4j.Logger;
import org.slf4j.LoggerFactory;

private Logger logger = LoggerFactory.getLogger(`!v expand("%:t:r")`.class);
endsnippet

snippet slf4j "inline logger"
org.slf4j.LoggerFactory.getLogger(`!v expand("%:t:r")`.class).${1}(
	"${2}", ${3}
);
endsnippet
